@model CreateCategoryViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>@Model.Name</h2>

<form asp-action="Edit" asp-controller="Category">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" class="form-control"/>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="ParentCategoryId" class="control-label">Parent Category Id</label>
        <input type="text" asp-for="ParentCategoryId" class="form-control"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-secondary"/>
    </div>
</form>