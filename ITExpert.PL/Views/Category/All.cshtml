@model System.Collections.Generic.IEnumerable<ITExpert.BLL.Utils.CategorySummary>

@{
    ViewBag.Title = "Categories";
    Layout = "_Layout";
}
<div class="table-responsive">
    <table id="categoryTable" class="table table-striped table-hover">
        <thead class="thead-dark">
        <tr>
            <th>Category</th>
            <th>Films Count</th>
            <th>Level</th>
            <th></th>
        </tr>
        </thead>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.FilmCount</td>
                <td>@category.Level</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@category.Id" method="post">
                        <div class="btn-group" role="group">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@category.Id">Update</a>
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>                            
                        </div>
                    </form>
                </td>
            </tr>
        }
    </table>
    <a class="btn btn-sm btn-primary" asp-action="Create">Add Category</a>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
        $(document).ready(function() {
            $('#categoryTable').DataTable();
        });
</script>
